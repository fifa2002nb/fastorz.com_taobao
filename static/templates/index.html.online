<!DOCTYPE html>
<html ng-app="FastORZ">

<head>
    <title>{{'fastorz'|translate}}</title>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS App -->
    <link rel="stylesheet" type="text/css" href="/static/css/app.min.css">
</head>

<body ng-controller="FastORZCtrl">
    <ui-view/>
    <!-- Javascript Libs -->
    <script type="text/javascript" src="/static/js/app.min.js"></script>
    <script id="show.html" type="text/ng-template">
    <body>
        <ion-content>
            <div class="list list-inset">
                <label class="item item-input">
                    <i class="icon ion-search placeholder-icon"></i>
                    <input type="text" placeholder="Search">
                 </label>
            </div>
            <ion-refresher pulling-text="Pull to refresh..." on-refresh="doRefresh()">
            </ion-refresher>
            <div deckgrid class="deckgrid" source="items" cardTemplateString='
                <ul class="">
                    <li class="eslite-border">
                        <a href="" ui-sref="peopleDetail({peopleID: card.ID})">
                            <div class="img-container">
                                <img ng-src="{{card.Imgs.Image}}" data-ng-src="" />
                            </div>
                            <div class="bottom-panel">
                                <div class="spotlite-name">
                                    <a class="name">{{card.Title}}</a>
                                </div>
                                <div class="info">
                                    {{card.Describtion}}
                                </div>
                            </div>
                        </a>
                    </li>
                </ul>'
            ></div>
            <ion-infinite-scroll on-infinite="loadMore();" ng-if="!noMoreData">
            </ion-infinite-scroll>
        </ion-content>
    </script>
</body>
</html>
