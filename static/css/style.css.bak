.props, .content {
    margin: 10px;}

.split {
    margin: 0 5px;}

.props {
    color: #9C948E;
    border-bottom: 1px solid;
    padding: 1em 0;}

.content {
    color: #696057;
    font-weight: bold;
    text-align: justify;
    line-height: 25px;}
.content img {
    width: 100%;}

.content > ul > li {
    margin-bottom: 10px;
    display: block;
    background-color: #FFFFFF;}
.content > ul > li, ul > li > .top img {
    box-shadow: rgb(206, 206, 206) 2px 2px 2px 0px;}
.content > ul > li > .top img {
    float: left;
    height: 150px;
    width: 106px;}
.content > ul > li > .top {
    padding: 10px;
    overflow: hidden;
    display: block;
    text-decoration: none;
    color: inherit;
    font-weight: initial;}
.content > ul > li > .top > .book-info {
    margin-left: 115px;
    height: 150px;
    padding-left: 5px;
    border-left: 1px solid;
    font-weight: bold;}
.content > ul > li > .top > .book-info > .book-name {
    height: 30px;
    color: #696057;}
.content > ul > li > .top > .book-info > .book-props {
    color: #9C948E;
    padding-top: 30px;}
.content > ul > li:active {
    background-color: #C5C5C5;}
.content > ul > li:active .bottom {
    background-color: #4A4036;}
.content > ul > li .bottom, .content > ul > li .bottom > tbody, .content > ul > li .bottom > tbody > tr,
.content > ul > li .bottom > tbody > tr > td {
    background-color: #696057;
    color: #B1ABA6;
    height: 70px;
    width: 100%;
    display: table;
    padding: 10px;}
.content > ul > li .bottom span {
    padding: 10px;
    display: table-cell;
    vertical-align: middle;}
.prop-content, .book-name {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;}

