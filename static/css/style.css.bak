ul.list li {
    overflow: hidden;}
ul.list li:active, ul.list li:active .list-title-font {
    background-color: #6A6057;
    color: #D1C9C3;}
ul.list > li > .content {
    padding: 10px 0 9px 0;
    margin: 0 10px;
    display: block;
    text-decoration: none;
    color: inherit;
    font-weight: initial;}
    ul.list > li > .content > img {
        float: left;
        height: 100px;
        width: 100px;
        margin-right: 10px;}
    ul.list > li > .content > div.right-panel {
        border-left: 1px solid #696057;
        height: 100px;
        overflow: hidden;}
    ul.list > li > .content > .right-panel > div.title {
        height: 40px;
        padding-left: 10px;
        border-bottom: 1px solid;
        font-weight: bold;
        font-size: 16px;}
    ul.list > li > .content > .right-panel > div.title > div.top-title {
        line-height: 16px;
        margin-bottom: 2px;}
    ul.list > li > .content > .right-panel > div.title > div {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;}
    ul.list > li > .content > .right-panel > div.info {
        position: relative;
        height: 59px;
        padding-left: 10px;
        padding-top: 10px;
        font-size: 14px;}
    ul.list > li > .content > .right-panel > div.info p {
        margin: 0;
        line-height: 21px;}

